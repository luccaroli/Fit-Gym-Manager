{% extends 'layout.njk' %}


{% block content %}

<div class="card table-container">
    <a href="/instructors/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
      {% for instructor in instructors %}
        <tr>
          <td>
            <span style="background-image: url({{instructor.avatar_url}})"></span>
            {{instructor.name}}
          </td>
          <td> 
            <div>{{instructor.services}}</div>
            <div>{{instructor.total_students}}</div>
          </td>
          <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
        </tr>
      </tbody>

      {% endfor %}
    </table>

{% endblock content %}